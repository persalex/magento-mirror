<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <productalert translate="label" module="productalert">
                    <label>Product Alerts</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>250</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_price_anonymous translate="label">
                            <label>Allow Price Alert For Anonymous Customers Too</label>
                            <comment>Actual only for potoky/alertanonymous theme</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <allow_price>1</allow_price>
                            </depends>
                        </allow_price_anonymous>
                        <allow_stock_anonymous translate="label">
                            <label>Allow Stock Alert For Anonymous Customers Too</label>
                            <comment>Actual only for potoky/alertanonymous theme</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow_stock>1</allow_stock>
                            </depends>
                        </allow_stock_anonymous>

                        <email_price_template_anonymous translate="label">
                            <label>Price Alert Email Template For Anonymous Customer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <allow_price>1</allow_price>
                            </depends>
                        </email_price_template_anonymous>
                        <email_stock_template_anonymous translate="label">
                            <label>Stock Alert Email Template For Anonymous Customer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <allow_stock>1</allow_stock>
                            </depends>
                        </email_stock_template_anonymous>
                    </fields>
                </productalert>
            </groups>
        </catalog>
    </sections>
</config>