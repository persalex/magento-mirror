<?xml version="1.0"?>
<config>
    <sections>
        <cms>
            <groups>
                <itembanner>
                    <label>Item Banner Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>250</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <rendering_type>
                            <label>The Way the Banners with the Same Position are Rendered</label>
                            <frontend_type>select</frontend_type>
                            <source_model>itembanner/rendering</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rendering_type>
                        <grid_cropping_aspect_ratio>
                            <label>Croping Aspect Ratio for Grid Mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Units of Height per 1 Unit of Width</comment>
                        </grid_cropping_aspect_ratio>
                        <list_cropping_aspect_ratio>
                            <label>Croping Aspect Ratio for List Mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Units of Height per 1 Unit of Width</comment>
                        </list_cropping_aspect_ratio>
                    </fields>
                </itembanner>
            </groups>
        </cms>
    </sections>
</config>