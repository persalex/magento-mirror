<?xml version="1.0"?>
<config>
    <sections>
        <anonymous translate="label" module="anonymouscustomer">
            <label>Anonymous Customer</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cascade_delete translate="label">
                    <label>Cascade Delete</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <when>
                            <label>Delete Anonymous if Customer is</label>
                            <comment>Automatically delete Anonymous Customer when the chosen above event happens to the corresponding regular customer.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>anonymouscustomer/delete</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </when>
                    </fields>
                </cascade_delete>
            </groups>
        </anonymous>
    </sections>
</config>